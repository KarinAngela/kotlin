<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/detalhe_image_view"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:scaleType="centerCrop" />

    <com.google.android.material.card.MaterialCardView
        style="@style/CardInfo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingHorizontal="5dp"
        android:layout_marginTop="-32dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_top">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/detalhe_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="?attr/colorPrimary"
                android:textAlignment="center"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/detalhe_descricao_produto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="24dp"
                android:textAlignment="center"
                android:textColor="#706E6E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textAlignment="center"
                android:layout_marginTop="16dp"
                android:text="Cultura"
                android:textColor="#2D9191"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detalhe_cultura"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:textColor="#706E6E"
                android:textSize="14sp" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Área Suportada"
                android:textAlignment="center"
                android:textColor="#2D9191"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/detalhe_area_suportada"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:layout_marginBottom="16dp"
                android:textAlignment="center"
                android:textColor="#706E6E"
                android:textSize="14sp"/>

        </LinearLayout>

        <Button
            android:id="@+id/detalhe_button"
            android:layout_width="300sp"
            android:layout_height="80sp"
            android:layout_gravity="center_horizontal|bottom"
            android:layout_marginBottom="10dp"
            android:backgroundTint="#e18528"
            android:text="Adicionar ao orçamento"
            android:textColor="@color/black"
            app:cornerRadius="18dp" />

    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
