<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detalhe.DetalheFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="391dp"
        android:layout_height="236dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pulverizado" />

    <com.google.android.material.card.MaterialCardView
        style="@style/CardInfo"
        android:layout_width="400dp"
        android:layout_height="612dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardElevation="100dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_top">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="9"
            android:columnCount="2">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="bottom|center_horizontal"
                android:text="Hover 500"
                android:textColor="#2D9191"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/card_texto"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:text="teste "
                android:textColor="#706E6E"
                android:textSize="12pt" />

            <TextView
                android:id="@+id/title_cultura"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="2"
                android:layout_column="0"
                android:gravity="bottom|center_horizontal"
                android:text="Cultura"
                android:textColor="#2D9191"
                android:textSize="10pt" />

            <TextView
                android:id="@+id/cultura_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="3"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:text="teste"
                android:textColor="#706E6E"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/title_area"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="4"
                android:layout_column="0"
                android:gravity="bottom|center_horizontal"
                android:text="Área Suportada"
                android:textColor="#2D9191"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/area_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="5"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:text="teste"
                android:textColor="#706E6E"
                android:textSize="8pt" />
            <TextView
                android:id="@+id/title_categoria"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="6"
                android:layout_column="0"
                android:gravity="bottom|center_horizontal"
                android:text="Categoria"
                android:textColor="#2D9191"
                android:textSize="10pt" />
            <TextView
                android:id="@+id/categoria_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_row="7"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:text="teste"
                android:textColor="#706E6E"
                android:textSize="8pt" />

            <Button
                android:id="@+id/button_orcamento"
                android:layout_width="380dp"
                android:layout_height="104dp"
                android:layout_row="8"
                android:layout_column="0"
                android:layout_gravity="center"
                android:layout_marginBottom="1dp"
                android:backgroundTint="#e18528"
                android:text="Adicionar Orçamento"
                android:textColor="@color/black"
                app:cornerRadius="18dp"/>
<!--Falta o botão levando pro orçamento-->

        </GridLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
