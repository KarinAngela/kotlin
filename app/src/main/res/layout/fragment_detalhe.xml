<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ui.detalhe.DetalheFragment">

    <com.google.android.material.imageview.ShapeableImageView
        android:layout_width="391dp"
        android:layout_height="236dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop"
        android:src="@drawable/pulverizado" />

    <com.google.android.material.card.MaterialCardView
        style="@style/CardInfo"
        android:layout_width="400dp"
        android:layout_height="612dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="0dp"
        app:cardBackgroundColor="#EFEFEF"
        app:cardElevation="100dp"
        app:shapeAppearanceOverlay="@style/ShapeAppearanceOverlay_card_custom_top">

        <GridLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:rowCount="2"
            android:columnCount="2">

            <TextView
                android:id="@+id/card_title"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_row="0"
                android:layout_column="0"
                android:gravity="bottom|center_horizontal"
                android:text="Hover 500"
                android:textColor="@color/black"
                android:textSize="14pt" />

            <TextView
                android:id="@+id/card_texto"
                android:layout_width="wrap_content"
                android:layout_height="544dp"
                android:layout_row="1"
                android:layout_column="0"
                android:layout_marginBottom="0dp"
                android:gravity="left"
                android:text="TESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTE TESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTETESTE TESTE TESTE TESTE TESTE "
                android:textColor="@color/black"
                android:textSize="10pt" />

        </GridLayout>
    </com.google.android.material.card.MaterialCardView>

</LinearLayout>
